@startuml GdObject_hierarchy

!include style.iuml

class GdSymbolTable {
    +{field} scope
    +{field} id
    +{field} name
    +{field} tags
    --
    +get_parent()
    +add_child()
    +get_child()
    +get_child_by_name()
    +get_children()
    +resolve()
    +get_fqid()
    +dumpd()
}

class gdObject {
    -__properties
    --
    ..Overide..
    +add_child()
    ..Additional utilities..
    +set_property()
    +get_property()
    +set_valid_property()
    +is_valid_property()
    +dumpd()
}

class GdDocument {
    -__filepath
    --
    +get_filepath()
    +open() -> handle
    +close()
    +set_plugin_path()
    +dumpd()
}

gdObject -up-|> GdSymbolTable

GdDocument -up-|> gdObject

@enduml

